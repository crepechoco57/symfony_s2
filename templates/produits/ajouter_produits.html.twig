
{% extends 'base.html.twig' %}
{% block javascripts %}
<script src = " {{ asset('js/images.js') }}" ></script>
{% endblock %}
{% block title %}
Ajouter un Produit
{% endblock %}

{% block body %}
    {{ form_start(form, {'attr': {'id': 'form_produit'}}) }}
        {{ form_row(form._token) }}
        {{ form_row(form.name, {'attr': {'id': 'nom_produit'}}) }}
        {{ form_row(form.description, {'attr': {'id': 'description_produit'}}) }}
        {{ form_row(form.reference.code, {'attr': {'id': 'reference_produit'}}) }}
        {{ form_row(form.prix,          {'attr': {'id': 'prix_produit'}}) }}
        {# {{ form_row(form.createdAt) }} #}
        {{ form_row(form.categorie,{'attr': {'id': 'categorie_produit'}}) }}
        {{ form_row(form.distributeur,{'attr': {'id': 'distributeur_produit'}}) }}
            {# ce btn va faire ref au bloc photos #}
            <button type="button" class="btn btn-success btn-ajouter" data-collection="#photos">
            Ajouter une image</button>
            <div id="photos"
            data-index= {{form.photos|length >0? form.photos|last.vars.name +1 : 0}}
            data-prototype= " {{form_widget(form.photos.vars.prototype)|e('html_attr') }} "
            >
            </div>

        {# <div class="form-group">
    {{ form_row(form.photo) }}
</div> #}
    {{ form_end(form) }}
{% endblock %}